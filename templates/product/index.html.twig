{% block hero %}{% endblock %}

{% block content %}

    <section class="menu_section section">

        <h1 class="menu__data-title">Vous avez faim ?</h1>
        <p class="menu__data-subtitle">Faites votre choix</p>

        <h2 class="section__title menu__category">Nos pizzas</h2>

        <div class="menu__container container swiper__container swiper-container">

            <div class="swiper-wrapper">

                {% for pizza in pizzas %}

                <div class="menu__card swiper-slide">
                    <a href="{{ path('pizza', { 'slug' : pizza.slug }) }}">

                        <img src="/uploads/{{ pizza.illustration }}" alt="{{ pizza.name }}" class="menu__img">

                        <div class="menu__data">

                            <h2 class="menu__data-titleProduct">{{ pizza.name }}</h2>

                        </div>

                    </a>
                </div>

                {% endfor %}

            </div>

        </div>

        <h2 class="section__title menu__category">Nos desserts</h2>

